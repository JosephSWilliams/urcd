urcd:
  af_unix relay chat daemons

depends:
  ucspi-tcp, python(>=2.6), daemontools,
  sh

recommends:
  cython(>=0.16), gcc

todo:
  curvecp

install:
  # python2.6
  ./Make.sh

  # python2.7
  sed 's/\.6/.7/g' Make.sh | sh

  $editor env/addr
  $editor env/port
  $editor env/serv
  $editor env/motd

  ln -s `pwd` /service/urcd

  mkdir -p /service/urcd/socket/
  echo -n '/service/urcd/socket/' > env/path

  sleep 4
  svstat /service/urcd

server2server:
  ./bin/add-tcprecv irc.daemon.ano 1234 /service/urcd/socket/

  # your peers can link their server using:
  ./bin/add-tcpsend irc.daemon.ano 1234 /service/urcd/socket/
